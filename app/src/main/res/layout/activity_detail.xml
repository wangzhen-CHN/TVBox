<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vs_20"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/vs_50"
            android:paddingRight="@dimen/vs_50"
            android:paddingBottom="@dimen/vs_10">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="@dimen/vs_530"
                android:layout_height="@dimen/vs_300"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitXY" />

            <View
                android:id="@+id/previewPlayerPlace"
                android:layout_width="@dimen/vs_530"
                android:layout_height="@dimen/vs_300"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vs_300"
                android:layout_marginStart="@dimen/vs_20"
                android:layout_marginLeft="@dimen/vs_20"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/vs_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vs_30"
                        android:paddingVertical="@dimen/vs_8"
                        android:ellipsize="marquee"
                        android:maxWidth="@dimen/vs_360"
                        android:text="影视剧名称"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/ts_34" />
                    <TextView
                        android:id="@+id/tvSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vs_10"
                        android:padding="@dimen/vs_8"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="来源"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:textColor="@color/color_FFFFFF_80"
                        android:textSize="@dimen/ts_18" />

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vs_10"
                        android:background="@drawable/button_detail_bg"
                        android:paddingRight="@dimen/vs_20"
                        android:paddingLeft="@dimen/vs_20"
                        android:paddingTop="@dimen/vs_5"
                        android:paddingBottom="@dimen/vs_5"
                        android:text="年代"
                        android:textColor="@color/color_FFFFFF_80"
                        android:textSize="@dimen/ts_16" />
                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vs_10"
                        android:paddingRight="@dimen/vs_20"
                        android:paddingLeft="@dimen/vs_20"
                        android:paddingTop="@dimen/vs_5"
                        android:paddingBottom="@dimen/vs_5"
                        android:text="区域"
                        android:background="@drawable/button_detail_bg"
                        android:textColor="@color/color_FFFFFF_80"
                        android:textSize="@dimen/ts_16" />
                    <TextView
                        android:id="@+id/tvLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vs_10"
                        android:paddingRight="@dimen/vs_20"
                        android:paddingLeft="@dimen/vs_20"
                        android:paddingTop="@dimen/vs_5"
                        android:paddingBottom="@dimen/vs_5"
                        android:text="语言"
                        android:background="@drawable/button_detail_bg"
                        android:textColor="@color/color_FFFFFF_80"
                        android:textSize="@dimen/ts_16" />
                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/vs_10"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/vs_260"
                        android:singleLine="true"
                        android:paddingRight="@dimen/vs_20"
                        android:paddingLeft="@dimen/vs_20"
                        android:paddingTop="@dimen/vs_5"
                        android:paddingBottom="@dimen/vs_5"
                        android:text="类型"
                        android:background="@drawable/button_detail_bg"
                        android:textColor="@color/color_FFFFFF_80"
                        android:textSize="@dimen/ts_16" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDirector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/vs_15"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="导演"
                    android:textColor="@color/color_FFFFFF_80"
                    android:textSize="@dimen/ts_18" />
                <TextView
                    android:id="@+id/tvActor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/vs_15"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="主演"
                    android:textColor="@color/color_FFFFFF_80"
                    android:textSize="@dimen/ts_18" />
                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="3"
                    android:text="简介"
                    android:paddingRight="@dimen/vs_10"
                    android:paddingLeft="@dimen/vs_10"
                    android:paddingTop="@dimen/vs_5"
                    android:paddingBottom="@dimen/vs_5"
                    android:background="@drawable/button_detail_des"
                    android:textColor="@color/color_FFFFFF_80"
                    android:textSize="@dimen/ts_18" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0mm"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPlay"
                        android:layout_width="@dimen/vs_120"
                        android:layout_height="@dimen/vs_50"
                        android:layout_marginEnd="@dimen/vs_10"
                        android:layout_marginRight="@dimen/vs_10"
                        android:background="@drawable/button_detail_all"
                        android:focusedByDefault="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/det_play"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/vs_20" >
                    </TextView>

                    <TextView
                        android:id="@+id/tvQuickSearch"
                        android:layout_width="@dimen/vs_120"
                        android:layout_height="@dimen/vs_50"
                        android:layout_marginEnd="@dimen/vs_10"
                        android:layout_marginRight="@dimen/vs_10"
                        android:background="@drawable/button_detail_all"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/det_search"
                        android:visibility="gone"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/vs_20" />
                    <TextView
                        android:id="@+id/tvCollect"
                        android:layout_width="@dimen/vs_128"
                        android:layout_height="@dimen/vs_50"
                        android:layout_marginRight="@dimen/vs_10"
                        android:layout_marginEnd="@dimen/vs_10"
                        android:background="@drawable/button_detail_all"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/det_fav"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/vs_20" />
                    <TextView
                        android:id="@+id/tvSort"
                        android:layout_width="@dimen/vs_120"
                        android:layout_height="@dimen/vs_50"
                        android:background="@drawable/button_detail_all"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/det_sort"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/vs_20" />

                    <ImageView
                        android:id="@+id/tvPlayUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/vs_15"
                        android:layout_marginLeft="@dimen/vs_15"
                        android:focusable="false"
                        android:visibility="gone"
                        app:srcCompat="@drawable/button_detail_link" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/mEmptyPlaylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:visibility="gone">

            <ImageView
                android:layout_width="@dimen/vs_128"
                android:layout_height="@dimen/vs_128"
                android:layout_gravity="center"
                android:src="@drawable/icon_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/vs_10"
                android:layout_marginLeft="@dimen/vs_10"
                android:gravity="center"
                android:text="暂无播放数据"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="@dimen/vs_60" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_60"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/vs_50"
                android:padding="@dimen/vs_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/vs_30"
                    android:gravity="center"
                    android:text="选集"
                    android:textColor="@color/color_GLOG"
                    android:textSize="@dimen/ts_22" />

<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/vs_4"-->
<!--                    android:layout_marginLeft="@dimen/vs_5"-->
<!--                    android:layout_marginRight="@dimen/vs_5"-->
<!--                    android:background="@drawable/border_radius" />-->
            </LinearLayout>
            <View
                android:layout_width="@dimen/vs_2"
                android:layout_height="@dimen/vs_20"
                android:background="@drawable/border_radius"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_60"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/vs_10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detail_note"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/vs_30"
                    android:gravity="center"
                    android:text="更新内容"
                    android:textColor="@color/color_GLOG"
                    android:textSize="@dimen/ts_16" />
            </LinearLayout>
        </LinearLayout>

<!--        <com.owen.tvrecyclerview.widget.TvRecyclerView-->
<!--            android:id="@+id/mGridViewFlag"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/vs_45"-->
<!--            android:layout_marginLeft="@dimen/vs_50"-->
<!--            android:layout_marginTop="@dimen/vs_10"-->
<!--            android:layout_marginRight="@dimen/vs_50"-->
<!--            android:clipChildren="false"-->
<!--            android:clipToPadding="false"-->
<!--            app:tv_horizontalSpacingWithMargins="@dimen/vs_10"-->
<!--            app:tv_selectedItemIsCentered="true" />-->

        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:id="@+id/mGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/vs_50"
            android:layout_marginTop="@dimen/vs_20"
            android:layout_marginRight="@dimen/vs_50"
            android:layout_marginBottom="@dimen/vs_30"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:tv_horizontalSpacingWithMargins="@dimen/vs_10"
            app:tv_selectedItemIsCentered="true"
            app:tv_verticalSpacingWithMargins="@dimen/vs_10" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/previewPlayer"
        android:layout_width="@dimen/vs_530"
        android:layout_height="@dimen/vs_300"
        android:layout_marginStart="@dimen/vs_50"
        android:layout_marginLeft="@dimen/vs_50"
        android:layout_marginTop="@dimen/vs_20"
        android:focusable="false"
        android:visibility="gone"
        android:name="com.github.tvbox.osc.ui.fragment.ModelSettingFragment"
        tools:layout="@layout/fragment_model" />

    <View
        android:id="@+id/previewPlayerBlock"
        android:layout_width="@dimen/vs_530"
        android:layout_height="@dimen/vs_300"
        android:layout_marginStart="@dimen/vs_50"
        android:layout_marginLeft="@dimen/vs_50"
        android:layout_marginTop="@dimen/vs_20"
        android:background="@drawable/button_detail_preview"
        android:focusable="false"
        android:visibility="gone" />
</FrameLayout>